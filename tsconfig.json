{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "module": "es2020",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/*.as.ts",
    "**/*.mjs",
    "app/examples"
  ]
}
